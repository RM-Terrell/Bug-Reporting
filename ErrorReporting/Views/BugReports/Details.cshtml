@model ErrorReporting.Models.BugReport
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Report Details</h2>
@using (Html.BeginForm("Edit", "BugReports"))
{ 
<ul>
    <p>
    @Html.LabelFor(m => m.Name)
    @Model.Name
    </p>
    <p>
    @Html.LabelFor(m => m.Severity)
    @Model.Severity
    </p>
    <p>
    @Html.LabelFor(m => m.OperatingSystemId)
    @Model.OperatingSystem.OperatingSystemName
    </p>
    <p> 
    @Html.LabelFor(m => m.BrowserId)
    @Model.Browser.BrowserName
    </p>
    <p>
    @Html.LabelFor(m => m.Description)
    @Model.Description
    </p>
    <p>
    @Html.LabelFor(m => m.Reproduction)
    @Model.Reproduction
    </p>
    <p>
    @Html.LabelFor(m => m.BugOccurrenceDate)
    @Model.BugOccurrenceDate
    </p>
    <p>
    @Html.LabelFor(m => m.SubmissionDate)
    @Model.SubmissionDate
    </p>

</ul>
<label>Set Report Status</label>
<button type="submit" class="btn btn-primary">In Progress</button> <!--TODO Wire up buttons to controller-->

}
